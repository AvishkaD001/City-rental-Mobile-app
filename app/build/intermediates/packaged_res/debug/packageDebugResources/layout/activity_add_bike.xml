<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/AddbikePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="Add bike Page"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextBikeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Bike ID"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>


    <EditText
        android:id="@+id/editTextBikeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Bike Name"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>


    <EditText
        android:id="@+id/editTextStationId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Station ID"
        android:inputType="text"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>


    <Switch
        android:id="@+id/switchAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:thumbTint="@color/primary"
        android:trackTint="@color/secondary"/>


    <Button
        android:id="@+id/buttonAddBike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bike"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:stateListAnimator="@null"
        android:elevation="4dp"/>
</LinearLayout>